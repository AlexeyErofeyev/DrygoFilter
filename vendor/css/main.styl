@import url(https://fonts.googleapis.com/css?family=Roboto:400,300,700);
@import 'variables'
body
	background-image url('../images/bg-219.png')
	
.app
	width 620px
	height 600px
	background-color silver
	box-shadow 1px 1px 10px rgba(0,0,0,.6)
	border-radius 10px
	overflow hidden
	position absolute
	top 0
	bottom 0
	left 0
	right 0
	margin auto
	
.app_header
	width 700px
	height 45px
	background-color orange
	margin 0
	line-height 48px
	padding-left 50px
	color white
	lightFont(25px,white)


.app_col
	width 309px
	margin 0
	padding-top 20px
	background-color silver
	
	&._left
		float left
		
	&._right
		float right
		
.app_input
	width 270px
	height 26px
	padding-left 15px
	border 0px solid blue
	border-radius 13px
	display block
	margin 0 auto
	margin-bottom 11px
	color blue
	lightFont(15px, gray)	
	&:focus
		box-shadow 1px 1px 1px rgba(0,0,0,.3)
		
.friends
	width 309px
	height 451px
	margin 0 auto
	background-color white
	overflow-y scroll
	overflow-x hidden
	
.app_footer
	width 620px
	height 45px
	background-color silver
	margin 0
	clear both
	display table
	text-align right
	
.app_save
	margin 8px 30px 0 0
	width 87px
	height 30px
	background-color orange
	border-radius 10px
	border 0px
	lightFont(15px, white)
	outline none !important
	&:hover
		background-color #e85e37

.friends_list
	list-style none
	margin 0
	padding 0
		
.friends_item
	width 297px
	height 60px
	padding 6px
	padding-bottom 2px
	margin 0
	&:after
		content ''
		clear both
		display table
	&:hover
		background-color silver
		
	
.friend_foto
	display block
	float left
	height 55px
	width 55px
	border-radius 50%
	margin-right 10px
	
.friend_name
	normalFont(17px, darkGray)
	line-height 18px
	

.cross
	&:hover
		cursor pointer
	
#left_col .cross
	color red
	margin-left 10px
	font-size 20px
	
#right_col .cross
	color green
	margin-left 10px
	font-size 20px


	
